<p id="notice"><%= notice %></p>

<h1>Listing Flower Ships</h1>

  <table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Flower order</th>
      <th>Memo</th>
      <th>Recieved date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flower_ships.each do |flower_ship| %>
      <tr>
        <td><%= flower_ship.flower_order_id %>_<%= flower_ship.flower_order.customer.name %>_<%= flower_ship.flower_order.flower_product.short_name %></td>
        <td><%= flower_ship.memo %></td>
        <td><%= flower_ship.recieved_date %></td>
        <td><%= link_to 'Show', flower_ship %></td>
        <td><%= link_to 'Edit', edit_flower_ship_path(flower_ship) %></td>
        <td><%= link_to 'Destroy', flower_ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

