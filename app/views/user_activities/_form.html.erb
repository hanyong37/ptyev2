<%= form_for(@user_activity,html: {class: 'form-horizontal'}) do |f| %>
  <% if @user_activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_activity.errors.count, "error") %> prohibited this user_activity from being saved:</h2>

      <ul>
        <% @user_activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
  <%  @user_activity.discount = 1 if @user_activity.discount == nil %>
  <fieldset>
    <div class="field">
      <%= f.hidden_field :customer_id %>
    </div>

    <div class="field">
      <%= f.hidden_field :act_type %>
    </div>

    <div class="form-group">
      <%= f.label "类型", class: 'col-xs-2 control-label' %>
      <div class="col-xs-10">
        <%= f.text_field :type_name, readonly:true,class: 'form-control' %>
      </div>
    </div>

    <%# 充值 %>
    <% if @user_activity.act_type == 0 %>

      <div class="form-group">
        <%= f.label "金额", class: 'col-xs-2 control-label' %>
        <div class="col-xs-10">
          <%= f.text_field :amount,class: 'form-control' %>
        </div>
      </div>

      <div class="field ">
        <%= f.hidden_field :count %>
      </div>

      <%# 消费%>
    <% elsif @user_activity.act_type == 1 ||  @user_activity.act_type ==2 %>
      <div class="field form-group">
        <%= f.label "相关产品", class: 'col-xs-2 control-label' %>
        <div class="col-xs-10">
          <%= f.collection_select :product_id, Product.current_list,:id,:long_name,class: 'form-control' %>
        </div>
      </div>

      <div class="field ">
        <%= f.hidden_field :amount, value:1 %>
      </div>

      <div class="field form-group">
        <%= f.label "数量", class: 'col-xs-2 control-label'%>
        <div class="col-xs-10">
          <%= f.text_field :count,class: 'form-control' %>
        </div>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label "折扣", class: 'col-xs-2 control-label'%>
      <div class="col-xs-10">
        <%= f.text_field :discount,class: 'form-control'%>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label "备注", class: 'col-xs-2 control-label' %>
      <div class="col-xs-10">
        <%= f.text_field :comments,class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label "日期", class: 'col-xs-2 control-label' %>
      <div class="col-xs-10">
        <%= f.date_select :act_date,class: 'form-control' %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>

  </fieldset>
