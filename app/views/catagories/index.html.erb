<div class="row">
      <span class="pull-right"><%= link_to  new_catagory_path , class: 'btn btn-success' do %><i class="glyphicon glyphicon-plus"></i><span class='hidden-xs'> 新增产品类别</span><% end %></span>
</div>
<div class="row">
  <table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>类别名称</th>
      <th>类别描述</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @catagories.each do |catagory| %>
      <tr>
        <td><%= catagory.name %></td>
        <td><%= catagory.description %></td>
        <td><%= link_to '查看', catagory , class: "btn btn-sm btn-success " %></td>
        <td><%= link_to '编辑', edit_catagory_path(catagory), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to '删除', catagory, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

