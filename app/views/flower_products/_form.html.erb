<%= simple_form_for(@flower_product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :short_name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :cycle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
