<p id="notice"><%= notice %></p>

<h1>Listing Flower Products</h1>

  <table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Cycle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flower_products.each do |flower_product| %>
      <tr>
        <td><%= flower_product.name %></td>
        <td><%= flower_product.description %></td>
        <td><%= flower_product.price %></td>
        <td><%= flower_product.cycle %></td>
        <td><%= link_to 'Show', flower_product %></td>
        <td><%= link_to 'Edit', edit_flower_product_path(flower_product) %></td>
        <td><%= link_to 'Destroy', flower_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

